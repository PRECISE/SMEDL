System PlaneSystem :=

Monitor Plane()
{
imported at_cruising_speed(int);
imported at_takeofflanding_speed(int);
imported landing_gear_down();
imported landing_gear_up();
exported landing_gear_alarm();
}

Monitor Engine(int)
{
imported creation engine_measurement(int, float);
exported above_cruising_speed(int);
exported below_cruising_speed(int);
}

syncset PlaneSet {Plane, Engine};

Channels:
ch1: engine_measurement => Engine.engine_measurement {Engine[0]=engine_measurement[0]}
ch2: landing_gear_down => Plane.landing_gear_down
ch3: landing_gear_up => Plane.landing_gear_up
ch4: Engine.above_cruising_speed => Plane.at_cruising_speed
ch5: Engine.below_cruising_speed => Plane.at_takeofflanding_speed
