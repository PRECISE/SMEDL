object SafeMon
events
    new SafeMon(id,upbound,lobound) =
        create MeanderData { id = this; upbound = this.thresh_up; lobound = this.thresh_dn; }
    SafeMon(id).updatePos(pos = meander.pos) = update(meander.pos) when id == main.md1 || id == main.md2
    SafeMon(id).changeDir() = update(meander.d) when id == main.md1 || id == main.md2